{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["typescript", "react", "import", "unicorn"],
	"categories": {
		"correctness": "error",
		"suspicious": "warn"
	},
	"rules": {
		"typescript/no-explicit-any": "error",
		"no-new": "off",
		"unicorn/no-empty-file": "off"
	},
	"ignorePatterns": ["node_modules/", "dist/", "main.js"]
}
