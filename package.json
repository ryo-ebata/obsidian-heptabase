    "builtin-modules": "^5.0.0",
    "jsdom": "^28.1.0",
    "obsidian": "^1.7.2",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "rolldown": "1.0.0-rc.5",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "pnpm": {
